<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:src="@mipmap/ic_launcher" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@color/teal_200"
            android:text="QR코드로 결제"
            android:id="@+id/QrPay"
            android:layout_marginTop="2dp"
            android:layout_gravity="center" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@color/teal_200"
            android:text="바우처 등록"
            android:id="@+id/PinRegister"
            android:layout_marginTop="20dp"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:id="@+id/PayList"
            android:drawableStart="@drawable/ic_baseline_list_24"
            android:drawableLeft="@drawable/ic_baseline_list_24"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="25dp"
            android:background="@color/teal_200"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:id="@+id/MyPage"
            android:drawableStart="@drawable/ic_baseline_person_24_1"
            android:drawableLeft="@drawable/ic_baseline_person_24_1"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="30dp"
            android:background="@color/teal_200"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:id="@+id/Policy"
            android:drawableStart="@drawable/ic_baseline_account_balance_24"
            android:drawableLeft="@drawable/ic_baseline_account_balance_24"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="30dp"
            android:background="@color/teal_200"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>